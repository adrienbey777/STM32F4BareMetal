{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "STM32F407 Flash + Debug",
      "type": "cortex-debug",
      "request": "launch",
      "servertype": "openocd",
      "cwd": "${workspaceFolder}",
      "executable": "${workspaceFolder}/build/firmware.elf",
      "configFiles": [
        "interface/stlink.cfg",
        "target/stm32f4x.cfg"
      ],
      "searchDir": [
        "${workspaceFolder}/openocd/scripts"
      ],
      "openOCDLaunchCommands": [
        "transport select swd",
        "adapter speed 4000"
      ],
      "preLaunchCommands": [
        "flash write_image erase ${workspaceFolder}/build/firmware.elf 0x08000000",
      ],
    }
  ]
}
