{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "STM32F407 OpenOCD",
      "type": "cortex-debug", // Extension VS Code
      "request": "launch",

      "servertype": "openocd",

      "cwd": "${workspaceFolder}",
      "executable": "${workspaceFolder}/build/firmware.elf",

      "configFiles": [
        "interface/stlink.cfg",
        "target/stm32f4x.cfg"
      ],

      "searchDir": [
        "${workspaceFolder}/openocd/scripts"  
      ],

      "runToEntryPoint": "main",  // Arrêter automatiquement à main() après load

      "svdFile": "${workspaceFolder}/STM32F407.svd", //register view)

      "openOCDLaunchCommands": [
        "transport select swd", //Serial Wire Debug,
        "adapter speed 4000"  //vitesse de communication avec la cible en kHz
      ]
    }
  ]
}
